<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tampilanRincianBarang">

    <TextView
        android:id="@+id/txtItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="165dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Info Item"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJudul4" />

    <TextView
        android:id="@+id/txtJudul4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="157dp"
        android:fontFamily="sans-serif-condensed"
        android:text="SeBar UNAI"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="227dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rincian"
        android:layout_width="157dp"
        android:layout_height="32dp"
        android:background="#FE897F"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="230dp" />
</android.support.constraint.ConstraintLayout>